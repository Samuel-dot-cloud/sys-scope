{
  "build": {
    "beforeBuildCommand": "yarn build",
    "beforeDevCommand": "yarn dev",
    "devPath": "http://localhost:5173",
    "distDir": "../dist"
  },
  "package": {
    "productName": "SysScope",
    "version": "1.0.0"
  },
  "tauri": {
    "systemTray": {
      "iconPath": "icons/tray-icon.png",
      "iconAsTemplate": false
    },
    "allowlist": {
      "all": false,
      "dialog": {
        "all": false,
        "message": true
      },
      "shell": {
        "all": false,
        "open": "^https://github.com/Samuel-dot-cloud/sys-scope$"
      }
    },
    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "copyright": "",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.samwahome.sysscope",
      "longDescription": "A feature-packed system monitor to view resources as disk, battery, CPU and memory usage",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null,
        "minimumSystemVersion": "11"
      },
      "resources": [],
      "shortDescription": "SysScope",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": true,
      "endpoints": [
        "https://github.com/Samuel-dot-cloud/sys-scope/releases/latest/download/latest.json"
      ],
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEE0QUIwQjgyREJBRkJGMDgKUldRSXY2L2JnZ3VycEg2MXBlMU9odTJwbzJ3NjEwQUpoT1hiOGpjaWZsNUtnWHVlbjJJbTdJYy8K"
    },
    "macOSPrivateApi": true,
    "windows": [
      {
        "fullscreen": false,
        "transparent": true,
        "hiddenTitle": true,
        "decorations": true,
        "titleBarStyle": "Visible",
        "height": 490,
        "resizable": false,
        "minimizable": false,
        "title": "SysScope",
        "width": 750
      }
    ]
  }
}
